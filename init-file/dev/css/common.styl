$c9		= #9
$cf4	= #f4
$cf6	= #f6
$cf7	= #f7
$cf8	= #f8
$cd		= #d

$white	= #f

$black	= #0

$s1		= 1px
$s2		= $s1 * 2
$s3		= $s1 * 3
$s4		= $s1 * 4
$s5 	= $s1 * 5
$s6 	= $s1 * 6
$s7 	= $s1 * 7
$s8 	= $s1 * 8
$s10 	= $s1 * 10
$s12	= $s1 * 12
$s14	= $s1 * 14
$s16	= $s1 * 16
$s18	= $s1 * 18
