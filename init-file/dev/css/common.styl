$s38 	= $s1 * 38
$s40	= $s1 * 40
$s50	= $s1 * 50
$s80 	= $s1 * 80
$s100 	= $s1 * 100
$s1000 	= $s1 * 1000

$radius = $s1 * 3

.container
	margin-left auto
	margin-right auto
	
body
	font-size $s12
	color $c6
	
a
	text-decoration none
	color $c6

input
	vertical-align middle

.pos-rel
	position relative

.row
	&:after
		clear left
		content ''
		display block
	for i in 1..12
		.col-{i}
			float left
			width (100% / 12 * i)

.btn
	display inline-block
	border none
	text-align center
	transition .3s
		
.icon
	display inline-block

.img-block
	width 100%
	display block